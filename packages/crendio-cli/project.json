{
  "name": "crendio-cli",
  "$schema": "..\\..\\node_modules\\nx\\schemas\\project-schema.json",
  "sourceRoot": "packages/crendio-cli/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/crendio-cli",
        "main": "packages/crendio-cli/src/index.ts",
        "tsConfig": "packages/crendio-cli/tsconfig.lib.json",
        "assets": ["packages/crendio-cli/*.md"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/crendio-cli/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/crendio-cli"],
      "options": {
        "jestConfig": "packages/crendio-cli/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
